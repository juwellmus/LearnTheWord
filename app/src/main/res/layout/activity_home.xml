<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainacitivity"
    android:orientation="vertical"
    tools:context="com.example.musa.learntheword.HomeActivity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/nbutton" />

    <ImageButton
        android:id="@+id/btn2"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/button1" />

    <ImageButton
        android:id="@+id/btn3"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/button2" />

    <ImageButton
        android:id="@+id/btn4"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/button3" />

    <ImageButton
        android:id="@+id/btn5"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/button4" />

    <ImageButton
        android:id="@+id/btn6"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_marginTop="-5dp"
        android:layout_marginLeft="90dp"
        app:srcCompat="@drawable/button5" />


    </LinearLayout>


</LinearLayout>
